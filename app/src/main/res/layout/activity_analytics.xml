<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.analytics"
    android:padding="5dp"
    android:background="#000000">


<Switch
        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Toggle Device"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/switchStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mySwitch"
        android:layout_marginTop="22dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"/>

    <com.adafruit.bluefruit.le.connect.app.RangeSeekBar
        android:id="@+id/seekbar_placeholder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchStatus"
        tools:absoluteMaxValue="150"
        tools:absoluteMinValue="20"
        tools:singleThumb="true" />

    <TextView
        android:id="@+id/seekbar_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar_placeholder"
        android:text="Chad wants to control dimming. Chad is a doodoo."
        android:textColor="@color/white"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_below="@+id/seekbar_text"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/stat_sys_data_bluetooth"
        android:onClick="startUARTActivity"  />

        <android.support.design.widget.FloatingActionButton
        android:id="@+id/linegraphstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/stat_sys_speakerphone"
        android:onClick="startLineGraph"  />

        <android.support.design.widget.FloatingActionButton
        android:id="@+id/piechartstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/stat_sys_download"
        android:onClick="startPIChart" />
</RelativeLayout>